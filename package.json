{
  "name": "vetree-verilog",
  "displayName": "vetree-verilog",
  "description": "Verilog project tree viewer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vetreeVerilogContainer",
          "title": "Verilog",
          "icon": "resources/veetree.svg"
        }
      ]
    },
    "views": {
      "vetreeVerilogContainer": [
        {
          "id": "vetreeVerilogView",
          "name": "Verilog Project Tree",
          "icon": "resources/veetree.svg"
        },
        {
          "id": "vetreeVerilogHierarchyView",
          "name": "Verilog Hierarchy"
        }
      ]
    },
    "commands": [
      {
        "command": "vetree-verilog.refreshTree",
        "title": "Verilog: Refresh Tree"
      },
      {
        "command": "vetree-verilog.refreshHierarchy",
        "title": "Verilog: Refresh Hierarchy"
      },
      {
        "command": "vetree-verilog.showModulePorts",
        "title": "Verilog: Show Module Ports"
      },
      {
        "command": "vetree-verilog.goToDefinition",
        "title": "Verilog: Go to Module Definition"
      },
      {
        "command": "vetree-verilog.revealInHierarchy",
        "title": "Verilog: Reveal in Hierarchy"
      },
      {
        "command": "vetree-verilog.revealInProjectTree",
        "title": "Verilog: Reveal in Project Tree"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vetree-verilog.showModulePorts",
          "when": "view == vetreeVerilogView && viewItem == verilogModule",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.revealInHierarchy",
          "when": "view == vetreeVerilogView && viewItem == verilogModule",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.showModulePorts",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleHierarchy",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.goToDefinition",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleHierarchy",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.revealInProjectTree",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleHierarchy",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Vetree Verilog",
      "properties": {
        "vetree-verilog.definesFile": {
          "type": "string",
          "default": "",
          "description": "Path to a .f file that provides +define+ flags for the Verilog parser."
        },
        "vetree-verilog.maxFileSizeMB": {
          "type": "number",
          "default": 10,
          "description": "Skip Verilog files larger than this size (MB). Set to 0 to disable."
        },
        "vetree-verilog.quickScan": {
          "type": "boolean",
          "default": false,
          "description": "Skip preprocessor handling for faster scans."
        },
        "vetree-verilog.maxHierarchyDepth": {
          "type": "number",
          "default": 100,
          "description": "Maximum depth for the hierarchy tree to prevent runaway recursion."
        },
        "vetree-verilog.debugLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable verbose logging for troubleshooting."
        },
        "vetree-verilog.skipHierarchyBuild": {
          "type": "boolean",
          "default": false,
          "description": "Skip building the hierarchy tree for troubleshooting."
        },
        "vetree-verilog.hierarchyResolve": {
          "type": "string",
          "default": "all",
          "enum": [
            "all",
            "first"
          ],
          "description": "Resolve multiple module implementations by taking all or only the first."
        },
        "vetree-verilog.hierarchyTopModule": {
          "type": "string",
          "default": "",
          "description": "Limit hierarchy roots to this top module name."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
