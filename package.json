{
  "name": "vetree-verilog",
  "displayName": "vetree-verilog",
  "description": "Verilog project tree viewer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",


  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vetreeVerilogContainer",
          "title": "Verilog",
          "icon": "resources/verilog.svg"
        }
      ]
    },
    "views": {
      "vetreeVerilogContainer": [
        {
          "id": "vetreeVerilogView",
          "name": "Verilog Project Tree",
          "icon": "resources/verilog.svg"
        },
        {
          "id": "vetreeVerilogHierarchyView",
          "name": "Verilog Hierarchy"
        }
      ]
    },
    "commands": [
      {
        "command": "vetree-verilog.refreshTree",
        "title": "Verilog: Refresh Tree"
      },
      {
        "command": "vetree-verilog.refreshHierarchy",
        "title": "Verilog: Refresh Hierarchy"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
