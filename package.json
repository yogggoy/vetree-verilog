{
  "name": "vetree-verilog",
  "displayName": "vetree-verilog",
  "description": "Verilog project tree viewer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vetreeVerilogContainer",
          "title": "Verilog",
          "icon": "resources/veetree.svg"
        }
      ]
    },
    "views": {
      "vetreeVerilogContainer": [
        {
          "id": "vetreeVerilogView",
          "name": "Verilog Project Tree",
          "icon": "resources/veetree.svg",
          "contextualTitle": "Verilog Project Tree (Filter: ${vetree-verilog.projectTreeFilter})"
        },
        {
          "id": "vetreeVerilogHierarchyView",
          "name": "Verilog Hierarchy",
          "contextualTitle": "Verilog Hierarchy (Filter: ${vetree-verilog.hierarchyFilter})"
        },
        {
          "id": "vetreeVerilogConnectionsView",
          "name": "Direct Connections"
        }
      ]
    },
    "commands": [
      {
        "command": "vetree-verilog.refreshTree",
        "title": "vetree: Refresh Tree"
      },
      {
        "command": "vetree-verilog.refreshHierarchy",
        "title": "vetree: Refresh Hierarchy"
      },
      {
        "command": "vetree-verilog.showModulePorts",
        "title": "vetree: Show Module Ports"
      },
      {
        "command": "vetree-verilog.goToDefinition",
        "title": "vetree: Go to Module Definition"
      },
      {
        "command": "vetree-verilog.revealInHierarchy",
        "title": "vetree: Reveal in Hierarchy"
      },
      {
        "command": "vetree-verilog.revealInProjectTree",
        "title": "vetree: Reveal in Project Tree"
      },
      {
        "command": "vetree-verilog.setTopModule",
        "title": "vetree: Set as Top Module"
      },
      {
        "command": "vetree-verilog.clearTopModule",
        "title": "vetree: Clear Top Module"
      },
      {
        "command": "vetree-verilog.selectEndpointA",
        "title": "vetree: Select as Endpoint A"
      },
      {
        "command": "vetree-verilog.selectEndpointB",
        "title": "vetree: Select as Endpoint B"
      },
      {
        "command": "vetree-verilog.showDirectConnections",
        "title": "vetree: Show Direct Connections"
      },
      {
        "command": "vetree-verilog.openDirectConnectionA",
        "title": "vetree: Open Endpoint A"
      },
      {
        "command": "vetree-verilog.openDirectConnectionB",
        "title": "vetree: Open Endpoint B"
      },
      {
        "command": "vetree-verilog.openDirectConnectionBoth",
        "title": "vetree: Open Both Endpoints"
      },
      {
        "command": "vetree-verilog.setHierarchyFilter",
        "title": "vetree: Set Hierarchy Filter",
        "icon": "$(filter)"
      },
      {
        "command": "vetree-verilog.setHierarchyFilterActive",
        "title": "vetree: Set Hierarchy Filter",
        "icon": "$(filter-filled)"
      },
      {
        "command": "vetree-verilog.clearHierarchyFilter",
        "title": "vetree: Clear Hierarchy Filter",
        "icon": "$(close)"
      },
      {
        "command": "vetree-verilog.setProjectTreeFilter",
        "title": "vetree: Set Project Tree Filter",
        "icon": "$(filter)"
      },
      {
        "command": "vetree-verilog.setProjectTreeFilterActive",
        "title": "vetree: Set Project Tree Filter",
        "icon": "$(filter-filled)"
      },
      {
        "command": "vetree-verilog.clearProjectTreeFilter",
        "title": "vetree: Clear Project Tree Filter",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vetree-verilog.setProjectTreeFilter",
          "when": "view == vetreeVerilogView && config.vetree-verilog.projectTreeFilter == ''",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.setProjectTreeFilterActive",
          "when": "view == vetreeVerilogView && config.vetree-verilog.projectTreeFilter != ''",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.clearProjectTreeFilter",
          "when": "view == vetreeVerilogView && config.vetree-verilog.projectTreeFilter != ''",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.setHierarchyFilter",
          "when": "view == vetreeVerilogHierarchyView && config.vetree-verilog.hierarchyFilter == ''",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.setHierarchyFilterActive",
          "when": "view == vetreeVerilogHierarchyView && config.vetree-verilog.hierarchyFilter != ''",
          "group": "navigation"
        },
        {
          "command": "vetree-verilog.clearHierarchyFilter",
          "when": "view == vetreeVerilogHierarchyView && config.vetree-verilog.hierarchyFilter != ''",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vetree-verilog.showModulePorts",
          "when": "view == vetreeVerilogView && viewItem == verilogModule",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.revealInHierarchy",
          "when": "view == vetreeVerilogView && viewItem == verilogModule",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.setTopModule",
          "when": "view == vetreeVerilogView && viewItem == verilogModule",
          "group": "selection@2"
        },
        {
          "command": "vetree-verilog.clearTopModule",
          "when": "view == vetreeVerilogView",
          "group": "selection@2"
        },
        {
          "command": "vetree-verilog.showModulePorts",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleHierarchy",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.goToDefinition",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleHierarchy",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.revealInProjectTree",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleHierarchy",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.setTopModule",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleHierarchy",
          "group": "selection@2"
        },
        {
          "command": "vetree-verilog.clearTopModule",
          "when": "view == vetreeVerilogHierarchyView",
          "group": "selection@2"
        },
        {
          "command": "vetree-verilog.goToDefinition",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleInstance",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.revealInProjectTree",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleInstance",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.setTopModule",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleInstance",
          "group": "selection@2"
        },
        {
          "command": "vetree-verilog.selectEndpointA",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleInstance",
          "group": "analysis@3",
          "args": {}
        },
        {
          "command": "vetree-verilog.selectEndpointB",
          "when": "view == vetreeVerilogHierarchyView && viewItem == verilogModuleInstance",
          "group": "analysis@3",
          "args": {}
        },
        {
          "command": "vetree-verilog.showDirectConnections",
          "when": "view == vetreeVerilogHierarchyView",
          "group": "analysis@3"
        },
        {
          "command": "vetree-verilog.openDirectConnectionA",
          "when": "view == vetreeVerilogConnectionsView",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.openDirectConnectionB",
          "when": "view == vetreeVerilogConnectionsView",
          "group": "navigation@1"
        },
        {
          "command": "vetree-verilog.openDirectConnectionBoth",
          "when": "view == vetreeVerilogConnectionsView",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Vetree Verilog",
      "properties": {
        "vetree-verilog.definesFile": {
          "type": "string",
          "default": "",
          "description": "Path to a .f file that defines files to scan and +define+ flags for the Verilog parser."
        },
        "vetree-verilog.maxFileSizeMB": {
          "type": "number",
          "default": 10,
          "description": "Skip Verilog files larger than this size (MB). Set to 0 to disable."
        },
        "vetree-verilog.quickScan": {
          "type": "boolean",
          "default": false,
          "description": "Skip preprocessor handling for faster scans."
        },
        "vetree-verilog.maxHierarchyDepth": {
          "type": "number",
          "default": 100,
          "description": "Maximum depth for the hierarchy tree to prevent runaway recursion."
        },
        "vetree-verilog.debugLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable verbose logging for troubleshooting."
        },
        "vetree-verilog.skipHierarchyBuild": {
          "type": "boolean",
          "default": false,
          "description": "Skip building the hierarchy tree for troubleshooting."
        },
        "vetree-verilog.hierarchyResolve": {
          "type": "string",
          "default": "all",
          "enum": [
            "all",
            "first"
          ],
          "description": "Resolve multiple module implementations by taking all or only the first."
        },
        "vetree-verilog.hierarchyTopModule": {
          "type": "string",
          "default": "",
          "description": "Limit hierarchy roots to this top module name."
        },
        "vetree-verilog.hierarchyFilter": {
          "type": "string",
          "default": "",
          "description": "Hierarchy filter string."
        },
        "vetree-verilog.projectTreeFilter": {
          "type": "string",
          "default": "",
          "description": "Project tree filter string."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
